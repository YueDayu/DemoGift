<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.helloworld.demogift" >

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".alarm.AlarmActivity" android:screenOrientation="portrait"></activity>
        <activity android:name=".select.SelectActivity" android:screenOrientation="portrait"></activity>
        <activity android:name=".demo.DemoActivity" android:screenOrientation="portrait"></activity>
        <activity android:name=".laction.LocationActivity" android:screenOrientation="portrait"></activity>
        <activity android:name=".more.MoreActivity" android:screenOrientation="portrait"></activity>
        <activity android:name=".plus.PlusActivity" android:screenOrientation="portrait"></activity>
        <activity android:name=".alarm.AlarmEditActivity" android:screenOrientation="portrait"></activity>

        <receiver
            android:name=".alarm.AlarmReceiver"
            android:process=":remote" />

    </application>

</manifest>
