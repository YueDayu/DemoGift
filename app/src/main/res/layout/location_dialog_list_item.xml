<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="5dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="5dp">

    <TextView
        android:id="@+id/location_dialog_list_chn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:text="书架"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/location_dialog_list_jpn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:layout_toRightOf="@id/location_dialog_list_chn"
        android:text="本棚"
        android:textSize="20sp"/>

    <ImageView
        android:id="@+id/location_dialog_list_sound"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@mipmap/sounds"
        android:layout_alignParentRight="true"/>

    <ImageView
        android:id="@+id/location_dialog_list_like"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_toLeftOf="@id/location_dialog_list_sound"
        android:src="@mipmap/like"
        android:layout_marginRight="10dp"/>

</RelativeLayout>