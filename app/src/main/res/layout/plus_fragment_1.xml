<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/basic_bg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="30dp"
        android:paddingTop="35dp">

        <ImageView
            android:id="@+id/ftg_word_1"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@mipmap/word1"
            android:layout_centerHorizontal="true"/>

        <ImageView
            android:id="@+id/ftg_like_1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_toRightOf="@id/ftg_word_1"
            android:scaleType="centerCrop"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:src="@mipmap/like"/>

        <ImageView
            android:id="@+id/ftg_sound_1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_toRightOf="@id/ftg_like_1"
            android:scaleType="centerCrop"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/sounds"/>

        <ImageView
            android:id="@+id/ftg_han"
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:scaleType="centerCrop"
            android:layout_below="@id/ftg_word_1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:src="@mipmap/word_button"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="35dp"
        android:layout_gravity="center_horizontal">

        <Button
            android:id="@+id/plus_bnt1"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:background="@drawable/button_bg"
            android:text="认识"
            android:textColor="@drawable/button_text_color"
            android:textSize="20sp"
            android:layout_weight="1"/>

        <View
            android:layout_width="2dp"
            android:layout_height="50dp"
            android:background="@color/basic_bg"/>

        <Button
            android:id="@+id/plus_bnt2"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:background="@drawable/button_bg"
            android:text="不认识"
            android:textColor="@drawable/button_text_color"
            android:textSize="20sp"
            android:layout_weight="1"/>


    </LinearLayout>


</LinearLayout>