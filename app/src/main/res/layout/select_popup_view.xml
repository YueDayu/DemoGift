<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/select_popup_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="15dp"
            android:text="新标准日语N1"
            android:textColor="@android:color/black"
            android:textSize="18sp"/>

        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/select_popup_title"
            android:background="@color/gray"/>

        <RelativeLayout
            android:id="@+id/relativeLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view1"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp">

            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="计划"
                android:textColor="@android:color/black"/>

            <NumberPicker
                android:id="@+id/select_popup_month"
                android:layout_width="30dp"
                android:layout_height="100dp"
                android:layout_toRightOf="@+id/text1"
                android:focusable="true"
                android:focusableInTouchMode="true"/>

            <TextView
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/select_popup_month"
                android:text="月"
                android:textColor="@android:color/black"/>

            <NumberPicker
                android:id="@+id/select_popup_day"
                android:layout_width="30dp"
                android:layout_height="100dp"
                android:layout_toRightOf="@+id/text2"
                android:focusable="true"
                android:focusableInTouchMode="true"/>

            <TextView
                android:id="@+id/text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/select_popup_day"
                android:text="日完成课程。每天"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/word_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/text3"
                android:text="2"
                android:textColor="@color/basic_color"/>

            <TextView
                android:id="@+id/text5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/word_num"
                android:text="个单词。"
                android:textColor="@android:color/black"/>

        </RelativeLayout>

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/relativeLayout1"
            android:layout_marginTop="15dp"
            android:background="@color/gray"/>

        <Button
            android:id="@+id/select_popup_ok"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/view2"
            android:background="@drawable/button_bg"
            android:text="完成"
            android:textColor="@android:color/black"
            android:textSize="20sp"/>

    </RelativeLayout>

</RelativeLayout>